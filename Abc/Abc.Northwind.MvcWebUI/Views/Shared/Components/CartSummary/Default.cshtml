@model Abc.Northwind.MvcWebUI.Models.CartSummaryViewModel
@{
    Layout = null;
}

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        @foreach (var item in Model.Cart.CartLines)
        {
            <a class="dropdown-item" href="#">@item.Product.ProductName <span class="badge">@item.Quantity</span></a>
        }

        <div class="dropdown-divider"></div>

        <a class="dropdown-item" href="#"><span class="glyphicon glyphicon-shopping-cart"></span>@Model.Cart.Total</a>

        <div class="dropdown-divider"></div>

        <a class="dropdown-item" asp-controller="Cart" asp-action="List">Go to Cart Details</a>

    </div>